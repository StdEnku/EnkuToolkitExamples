<Window x:Class="_07.MessageBoxService.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07.MessageBoxService.Views"
        xmlns:vm="clr-namespace:_07.MessageBoxService.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel VerticalAlignment="Center" Margin="50">
        <TextBox Text="{Binding Txt}" />
        <Button Content="ShowMessageBox" Command="{Binding ShowMessageBoxCommand}" />
    </StackPanel>
</Window>
