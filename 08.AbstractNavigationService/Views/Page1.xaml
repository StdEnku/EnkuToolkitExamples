<Page x:Class="_08.AbstractNavigationService.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_08.AbstractNavigationService.Views"
      xmlns:vm="clr-namespace:_08.AbstractNavigationService.ViewModels"
      DataContext="{x:Static vm:ViewModels.Page1ViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <DockPanel LastChildFill="True">
        <Button Content="To Page2" Margin="10" DockPanel.Dock="Bottom" Command="{Binding ClickedCommand}" />
        <Viewbox DockPanel.Dock="Top">
            <Label Content="Page1" />
        </Viewbox>
    </DockPanel>
</Page>
